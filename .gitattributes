# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python
*.pyx text diff=python
*.pxd text diff=python

# Docker files
Dockerfile text
docker-compose.yml text
*.dockerfile text

# Documentation
*.md text diff=markdown
*.txt text
*.rst text
*.json text
*.yaml text
*.yml text

# Frontend files
*.html text diff=html
*.css text diff=css
*.js text
*.ts text
*.tsx text
*.jsx text

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.pyc binary export-ignore
*.pyo binary export-ignore
*.pyd binary export-ignore

# Image files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Font files
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
.editorconfig export-ignore
.env.example export-ignore
.dockerignore export-ignore

# Mark files as generated
*.pyc linguist-generated=true
*.pyo linguist-generated=true
*.pyd linguist-generated=true
__pycache__/* linguist-generated=true

# Mark documentation as documentation
docs/* linguist-documentation=true
*.md linguist-documentation=true
LICENSE linguist-documentation=true

# Set language for GitHub statistics
*.py linguist-language=Python
*.pyx linguist-language=Python
*.pxd linguist-language=Python 