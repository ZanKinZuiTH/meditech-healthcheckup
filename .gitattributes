# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python files
*.py text diff=python eol=lf
*.pyw text diff=python eol=lf
*.pyx text diff=python eol=lf
*.pxd text diff=python eol=lf

# Docker files
Dockerfile text
docker-compose.yml text
*.dockerfile text

# Documentation
*.md text diff=markdown eol=lf
*.txt text eol=lf
*.rst text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Frontend files
*.html text diff=html eol=lf
*.css text diff=css eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf

# Binary files (no conversion)
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.pyc binary
*.pyo binary
*.pyd binary

# Image files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text

# Font files
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
.editorconfig export-ignore
.env.example export-ignore
.dockerignore export-ignore

# Mark files as generated
*.pyc linguist-generated=true
*.pyo linguist-generated=true
*.pyd linguist-generated=true
__pycache__/* linguist-generated=true

# Mark documentation as documentation
docs/* linguist-documentation=true
*.md linguist-documentation=true
LICENSE linguist-documentation=true

# Set language for GitHub statistics
*.py linguist-language=Python
*.pyx linguist-language=Python
*.pxd linguist-language=Python 