# Application
APP_NAME=MediTech HealthCheckup
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=8000
APP_SECRET_KEY=your-secret-key-here
APP_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_CONNECTION=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=meditech
DB_USERNAME=postgres
DB_PASSWORD=your-password-here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_ENCRYPTION=TLS
MAIL_FROM_ADDRESS=noreply@meditech.com
MAIL_FROM_NAME="${APP_NAME}"

# Storage
UPLOAD_DIR=uploads
BACKUP_DIR=backups
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DIR=logs

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
SSL_ENABLED=false
SSL_CERT_FILE=ssl/cert.pem
SSL_KEY_FILE=ssl/key.pem

# Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false

# External Services
LINE_NOTIFY_TOKEN=your-line-notify-token
SMS_API_KEY=your-sms-api-key
CLOUD_STORAGE_KEY=your-cloud-storage-key

# Development
DEV_AUTO_RELOAD=true
DEV_SHOW_ERROR_DETAILS=true
DEV_MOCK_SERVICES=false

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
API_HOST=http://localhost
API_PORT=8000

# Email Configuration
EMAIL_FROM=noreply@meditech.com

# File Storage
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.docx

# Logging
LOG_FILE=logs/app.log

# Frontend Settings
FRONTEND_URL=http://localhost:3000
ASSETS_DIR=./static/assets

# Security
SSL_CERTIFICATE=
SSL_KEY=

# Third Party Services
CLOUD_STORAGE_SECRET=
NOTIFICATION_SERVICE_URL=

# Feature Flags
ENABLE_CACHE=True
ENABLE_NOTIFICATIONS=True
ENABLE_FILE_UPLOAD=True
ENABLE_AUDIT_LOG=True

# Performance
MAX_WORKERS=4
TIMEOUT=30
KEEP_ALIVE=5

# Backup
BACKUP_RETENTION_DAYS=30

# Monitoring
PROMETHEUS_PORT=9090 